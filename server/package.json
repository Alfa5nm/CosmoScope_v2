{
  "name": "cosmoscope-server",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "tsx watch server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "build:exe": "pkg dist/server.js --targets node20-win-x64 --output cosmoscope-server.exe",
    "lint": "eslint . --ext ts --report-unused-disable-directives --max-warnings 0",
    "typecheck": "tsc --noEmit"
  },
  "pkg": {
    "assets": [
      "dist/**/*",
      "node_modules/**/*",
      "config/**/*",
      "db.sqlite"
    ],
    "targets": [
      "node20-win-x64"
    ]
  },
  "dependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/uuid": "^9.0.7",
    "better-sqlite3": "^12.4.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "node-fetch": "^3.3.2",
    "sqlite3": "^5.1.6",
    "undici": "^6.21.3",
    "uuid": "^9.0.1",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.5",
    "@types/sqlite3": "^3.1.8",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "eslint": "^8.55.0",
    "nexe": "^5.0.0-beta.4",
    "pkg": "^5.8.1",
    "tsx": "^4.6.2",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
